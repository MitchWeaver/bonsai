info='fork of OpenSSL, providing Secure Sockets Layer and cryptography utilities'
version=2.9.2
source=http://ftp.openbsd.org/pub/OpenBSD/LibreSSL/$name-$version.tar.gz
deps=libtool
sha256=c4c78167fae325b47aebd8beb54b6041d6f6a56b3743f4bd5d79b15642f9d5d4
nostrip=true
build() {
    bonsai_configure --disable-hardening --disable-windows-ssp

    # if rebuilding inside chroot, the bundled libtool errors
    [ -e "$root"/bin/libtool ] && cp -f "$root"/bin/libtool .

    bonsai_make
    bonsai_make install
}

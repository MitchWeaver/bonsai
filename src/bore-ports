# search ports for given $pkgname
search() {
    [ "$1" ] || die 'search(): no argument given'
    results="$(find "$ports" ! -path "$ports" -name *${1}* | sort)"
    [ "$results" ] || die "port $1 not found"
    for port in $results ; do
        port=${port##*/}
        echo ${port%.*}
    done
    unset results port
}

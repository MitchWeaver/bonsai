info='Find files on filesystems'
version=0.26
source=http://releases.pagure.org/mlocate/$name-$version.tar.xz
deps=shadow
sha256=3063df79fe198fb9618e180c54baf3105b33d88fe602ff2d8570aaf944f1263e
postbuild() {
    # mlocate creates var/mlocate in PREFIX, but not in FS
    mkdir -p /var/mlocate
    # delete it in pkgdir
    rm -r "$pkg"/var
    # needs a group called mlocate
    groupadd -rf mlocate
}

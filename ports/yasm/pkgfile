info='A BSD-licensed rewrite of the NASM assembler'
version=1.3.0
source=http://tortall.net/projects/$name/releases/$name-$version.tar.gz
sha256=3dce6601b495f5b3d45b59f7d2492a340ee7e84b5beca17e48f862502bd5603f
build() {
    # yasm's configure complains it doesn't recognize musl
    bonsai_configure \
        --host="${HOST%-musl}" \
        --build="${TARGET%-musl}" \
        --target="${TARGET%-musl}"
    bonsai_make
    bonsai_make install
}

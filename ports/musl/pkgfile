version=1.1.22
source=http://www.musl-libc.org/releases/musl-$version.tar.gz
build() {
    # note: we are not using bore's aliased configure/make
    ./configure CC="$cc" --disable-shared \
                         --disable-wrapper \
                         --enable-optimize \
                         --prefix="$opt"/musl
    command make -s CC="$cc"
    command make -s install
}

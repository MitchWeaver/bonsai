#!/bin/sh

if [ "$HOSTNAME" ] ; then
    echo "$HOSTNAME" > /etc/hostname
    echo "$HOSTNAME" > /proc/sys/kernel/hostname
    hostname "$(cat /etc/hostname)"
    export HOSTNAME
fi

if [ "$dns" ] ; then
    :> /etc/resolv.conf
    OLDIFS="$IFS"
    IFS=':'
    set -- $dns
    IFS="$OLDIFS"
    while [ "$1" ] ; do
        echo "nameserver $1" >> /etc/resolv.conf
        shift
    done
fi

ifconfig lo up

if [ "$interface" ] ; then
    ifconfig "$interface" up
    sdhcp -d "$interface" &
fi

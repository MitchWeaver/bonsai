info="Joe's Own Editor"
version=4.6
source=http://downloads.sourceforge.net/$name-editor/$name-$version.tar.gz
deps=netbsd-curses
sha256=495a0a61f26404070fe8a719d80406dc7f337623788e445b92a9f6de512ab9de
postbuild() {
    # remove russian mans
    rm -r "$pkg"/share/man/ru

    # fix borked filenames
    mv -f "$pkg"/bin/"$TARGET"-$name "$pkg"/bin/$name
    mv -f "$pkg"/share/man/man1/"$TARGET"-$name.1 "$pkg"/share/man/man1/$name.1
}

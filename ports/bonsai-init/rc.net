#!/bin/sh

if [ "$HOSTNAME" ] ; then
    echo "$HOSTNAME" > /etc/hostname
    echo "$HOSTNAME" > /proc/sys/kernel/hostname
    hostname /etc/hostname
    export HOSTNAME
fi

if [ "$dns" ] ; then
    :> /etc/resolv.conf
    IFS=":" set -- $dns
    while [ "$1" ] ; do
        echo "nameserver $1" >> /etc/resolv.conf
        shift
    done
fi

if [ "$interface" ] ; then
    ifconfig "$interface" up
    sdhcp -d "$interface" &
fi

info='GNU pico editor clone'
version=4.3
source=http://nano-editor.org/dist/v4/$name-$version.tar.xz
deps=ncurses
build() {
    # note: --enable-tiny removes many features
    #       a regular user of nano might want
    configure LIBS='-lncursesw -ltinfow' \
              --enable-utf8 \
              --enable-tiny
    make
    make install
}

info='GNU pico editor clone'
version=4.3
source=http://nano-editor.org/dist/v4/$name-$version.tar.xz
deps=netbsd-curses
sha256=00d3ad1a287a85b4bf83e5f06cedd0a9f880413682bebd52b4b1e2af8cfc0d81
build() {
    CPPFLAGS="-D_GNU_SOURCE $CPPFLAGS" \
    bonsai_configure \
        --enable-utf8 \
        --enable-tiny
    bonsai_make
    bonsai_make install
}

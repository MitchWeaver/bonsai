info='Perl Compatible Regular Expressions library'
version=10.33
source="http://ftp.pcre.org/pub/pcre/pcre2-${version}.tar.gz"
sha256=e2e2899a97489fc6ad1b0cc3da7952c7cca991b4a0f7db6649b75d9721025d31

build() {
    bonsai_configure \
        --enable-pcre2-16 \
        --enable-pcre2-32 \
        --with-match-limit-recursion=8192 \
        --enable-jit
    bonsai_make
    bonsai_make install
}
